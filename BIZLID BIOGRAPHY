);      // Play demo button: JS event example     document.getElementById('play-demo').addEventListener('click', function(){       // this is an example of event -> function -> DOM change       const result = document.getElementById('play-result');       result.textContent = 'Playing demo clip... (demo action)';       setTimeout(()=> result.textContent = 'Demo ready. Support BIZLID on streaming platforms!', 1600);     });      // Fan sign-up submit handler     document.getElementById('signupBtn').addEventListener('click', function(e){       e.preventDefault();       const name = document.getElementById('fanName').value.trim();       const email = document.getElementById('fanEmail').value.trim();       const song = document.getElementById('favSong').value;       if(!name || !email){         alert('Please enter your name and email');         return;       }       // Basic validation (demo). In real app, send to server via fetch()       this.disabled = true;       this.textContent = 'Joining...';       setTimeout(()=>{         alert('Welcome to the fanlist, ' + name + '! Thank you — we added your interest for "' + song + '".');         this.disabled = false;         this.textContent = 'Join Fanlist';         // clear fields if you want         document.getElementById('fanName').value = '';         document.getElementById('fanEmail').value = '';       }, 1000);     });      // small accessibility: allow keyboard nav (Enter on nav)     navButtons.forEach(b=>{       b.tabIndex = 0;       b.addEventListener('keydown', (ev)=>{         if(ev.key === 'Enter') b.click();       });     });      // optional: log usage (console)     console.log('Bizlid page loaded — ready.');   </script> </body> </>
